@charset "UTF-8";

* {
	color: white;
	font-family: Arial, Helvetica, sans-serif;
}
body{
	background-image: linear-gradient( 90deg,#0FC2C0, #008F8C);
}

main{
	background-color: #015958;
	border-radius: 30px;
	box-shadow: 10px 10px 15px #023535;
	width: 700px;
	padding: 10px;
	margin: auto;
}

h1{
	color: #0FC2C0;
	text-align: center;
	text-shadow: 1px 1px 1px #0CABA8;
}

h2{
	color: #0CABA8;
}

p {
	text-align: justify;
}
